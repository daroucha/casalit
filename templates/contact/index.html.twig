{% extends 'base.html.twig' %}

{% block page_style %}cs-page-contact{% endblock %}

{% block body %}

<cs-layout use-margin>
  <cs-badge range="half" index="1">
    <div class="cs-badge-contents-text cs-badge-contents-center">
      {% for message in app.flashes('notice') %}
        <div class="cs-flash-notice">
          {{ message }}
        </div>
      {% endfor %}

      <h2>Fale conosco</h2>
      <p>Estamos sempre à disposição para ouvir você. Entre em contato conosco, por meio de uma mensagem, ou, ligue para o número de telefone abaixo.</p>

      <div class="cs-badge-contents-text-area">
        <p>Av. Mascarenhas de Morais, 521, Chácara Rio Petrópolis</p>
        <p>Duque de Caxias - RJ, CEP 25230-030</p>
        <p>Telefone: (21) 2677-5000 | Fax: (21) 2677-5011</p>
        <p>E-mail: vendas@casalit.com.br</p>
      </div>
    </div>
  </cs-badge>

  <cs-badge range="half" index="7">
    <div class="cs-badge-contents-text">
      {{ form_start(form, {'attr': {'class': 'cs-badge-contents-form'}}) }}
        {{ form_errors(form, {'attr': {'class': 'cs-badge-contents-alert'}}) }}

        <fieldset>
          {{ form_label(form.name) }}
          {{ form_widget(form.name) }}
        </fieldset>

        <fieldset>
          {{ form_label(form.email) }}
          {{ form_widget(form.email) }}
        </fieldset>

        <fieldset>
          {{ form_label(form.subject) }}
          {{ form_widget(form.subject) }}
        </fieldset>

        <fieldset>
          {{ form_label(form.message) }}
          {{ form_widget(form.message) }}
        </fieldset>
        
        <div class="message">
          <div>
            <p>Seu endereço de email não será publicado. Os campos obrigatórios são marcados (*).</p>
          </div>

          {{ form_widget(form.save, {'attr': {'class': 'cs-button'}}) }}
        </div>
      {{ form_end(form) }}
    </div>
  </cs-badge>
</cs-layout>

{% endblock %}
